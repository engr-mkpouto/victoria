                <h5 class="form__title">Forgot Password</h5>
                <%- include('../partials/flash') %>
                <form action="/api/password/forget" method="POST" id="login" class="form">
                    <div class="form__input-group">
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control form__input" type="email" id="email" name="email" autofocus >
                    </div>
                    <button class="form__button">Submit</button>
                </form>
            </div>
        </div>
    </div>
